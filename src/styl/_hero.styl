.Hero
  // background: url('../img/gradient.svg'), url('../img/hero-image.jpg')
  // background-attachment: fixed
  // background-position: center 70px, center -200px
  // background-repeat: no-repeat
  // background-size: 600px, cover
  background: url('../img/hero-image.jpg')
  background-attachment: fixed
  background-position: center top
  +above(600px)
    background-position: center -200px
  background-repeat: no-repeat
  background-size: cover
  height: 500px
  position: relative
  &:before
    background: linear-gradient(-45deg, rgba($sennobia-blue, 0.15), rgba($purple, 0.65))
    content: ''
    display: block
    height: 500px
    left: 0
    position: absolute
    top: 0
    width: 100%
  
  &__content
    padding-top: 10em
    text-align: center
    width: 100%
    +above(600px)
      padding-top: 10em
      width: 50%
.Brand
  color: $white
  font-weight: normal
  letter-spacing: .5rem
  uppercase()
  span
    display: block
    font-size: rem(16px)
.Tagline
  color: $sennobia-blue
  font-family: serif
  font-size: rem(32px)
  font-weight: normal
  margin-top: 2em
